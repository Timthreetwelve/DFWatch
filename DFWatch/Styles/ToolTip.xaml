<UserControl x:Class="DFWatch.Styles.ToolTip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helper="clr-namespace:DFWatch.Helpers"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="35" d:DesignWidth="250"
             Background="{DynamicResource MaterialDesignPaper}"
             Foreground="{DynamicResource MaterialDesignBody}">

        <Border Width="Auto" Height="30"
                Padding="10,0"
                BorderBrush="{DynamicResource MaterialDesignDivider}"
                BorderThickness="1" CornerRadius="4"
                Opacity=".9">
            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="12" SnapsToDevicePixels="True"
                       Text="{x:Static helper:AppInfo.ToolTipVersion}" />
        </Border>

</UserControl>
